rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // FCM Tokens - admin can read all, anyone can create/update
    match /fcmTokens/{tokenId} {
      allow read: if isAdmin();
      allow create, update: if true; // Allow anyone to save their FCM tokens
      allow delete: if isAdmin();
    }
    
    // Install Metrics - admin can read, anyone can write
    match /installMetrics/{metricId} {
      allow read: if isAdmin();
      allow create, update: if true; // Allow users to save install metrics
      allow delete: if isAdmin();
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Sermons - admin can read/write
    match /sermons/{sermonId} {
      allow read: if true; // Public reading
      allow write: if isAdmin();
    }
    
    // Participants - admin can read/write
    match /participants/{participantId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // Encounters - admin can read/write
    match /encounters/{encounterId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
